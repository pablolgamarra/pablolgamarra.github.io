---
// src/components/Perfil.astro
const { name, image, bio } = Astro.props;
---

<div class='mb-4'>
	{console.log(image)}
	<img
		src={image}
		alt={name}
		class='w-24 h-24 rounded-full mx-auto border-4 border-white shadow-lg'
	/>
	<h1 class='text-xl font-bold mt-2'>{name}</h1>
	<p class='text-gray-600 text-sm'>{bio}</p>
</div>
